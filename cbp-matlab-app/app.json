{
    "checkpointable": false,
    "name": "wallen-{{ app.name }}",
    "executionSystem": "tacc.stampede2.wallen",
    "executionType": "HPC",
    "deploymentPath": "apps/wallen-{{ app.name }}-{{ app.version }}",
    "deploymentSystem": "tacc.work.wallen",
    "helpURI": "http://www.mathworks.com/help/matlab/index.html",
    "label": "{{ app.label }}",
    "shortDescription": "{{ app.description }}",
    "longDescription": "Perform CBP in an interactive MATLAB 2021b session. Submit a help ticket to get your license configured or approved.",
    "modules": [
        "matlab/2021b"
    ],
    "ontology": [],
    "parallelism": "SERIAL",
    "tags": [ "DCV" ],
    "templatePath": "wrapper.sh",
    "testPath": "test/test.sh",
    "version": "{{ app.version }}",
    "defaultMaxRunTime": "12:00:00",
    "defaultQueue": "skx-normal",
    "inputs": [
        {
            "id": "workingDirectory",
            "value": {
                "validator": "",
                "visible": true,
                "required": false,
                "order": 0,
                "enquote": false,
                "default": ""
            },
            "details": {
                "label": "Input File or Directory",
                "description": "The file, or directory containing the files that you want to work on. This input will be copied to where your Matlab session runs. Click the 'Select Input' button to select the target file or directory.",
                "argument": null,
                "showArgument": false,
                "repeatArgument": false
            },
            "semantics": {
                "minCardinality": 1,
                "maxCardinality": 1,
                "ontology": [
                    "xsd:string"
                ],
                "fileTypes": [
                    "raw-0"
                ]
            }
        }
    ],
    "parameters": [
        {
            "id": "_license",
            "value": {
                "visible": true,
                "required": true,
                "type": "string",
                "order": 0,
                "enquote": false,
                "default": "",
                "validator": ""
            },
            "details": {
                "label": "Matlab License File Text",
                "description": "The text that should be put in the Matlab license file.",
                "argument": null,
                "showArgument": false,
                "repeatArgument": false
            },
            "semantics": {
                "minCardinality": 1,
                "maxCardinality": 1,
                "ontology": [
                    "xs:string"
                ]
            }
        },
        {
            "id": "desktop_resolution",
            "value": {
                "visible": true,
                "required": true,
                "type": "enumeration",
                "order": 0,
                "enquote": false,
                "default": "1280x800",
                "enum_values": [
                    {
                        "800x600": "800x600"
                    },
                    {
                        "1280x800": "1280x800"
                    },
                    {
                        "1920x1080": "1920x1080"
                    },
                    {
                        "1920x1200": "1920x1200"
                    },
                    {
                        "1600x1200": "1600x1200"
                    },
                    {
                        "2560x1600": "2560x1600"
                    }
                ]
            },
            "details": {
                "label": "Desktop Resolution",
                "description": "Set the desktop screen size for your visualization session.",
                "argument": null,
                "showArgument": false,
                "repeatArgument": false
            },
            "semantics": {
                "minCardinality": 1,
                "maxCardinality": 1,
                "ontology": [
                    "xs:enumeration",
                    "xs:string"
                ]
            }
        },
        {
            "id": "_webhook_base_url",
            "value": {
                "visible": true,
                "required": true,
                "type": "string",
                "order": 1,
                "enquote": false,
                "default": null,
                "validator": null
            },
            "details": {
                "label": "Base portal webhook url.",
                "description": null,
                "argument": null,
                "showArgument": false,
                "repeatArgument": false
            },
            "semantics": {
                "minCardinality": 1,
                "maxCardinality": 1,
                "ontology": [
                    "xs:string"
                ]
            }
        }
    ],
    "outputs": []
}
