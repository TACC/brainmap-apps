{
    "checkpointable": false,
    "name": "wallen-{{ app.name }}",
    "executionSystem": "tacc.lonestar6.wallen",
    "executionType": "HPC",
    "deploymentPath": "tapis/apps/wallen-{{ app.name }}-{{ app.version }}",
    "deploymentSystem": "cloud.corral.work.wallen",
    "helpURI": "https://github.com/TACC/brainmap-apps/blob/main/cbp-matlab-gui/CBP-Manual.pdf",
    "label": "{{ app.label }}",
    "shortDescription": "{{ app.description }}",
    "longDescription": "Perform Co-activation Based Parcellation (CBP) in an interactive MATLAB 2022b session. Submit a help ticket to get your license configured or approved.",
    "modules": [
        "load matlab/2022b",
        "load swr/21.2.5"
    ],
    "ontology": [],
    "parallelism": "SERIAL",
    "tags": [ "VNC", "DCV" ],
    "templatePath": "wrapper.sh",
    "testPath": "test/test.sh",
    "version": "{{ app.version }}",
    "defaultMaxRunTime": "12:00:00",
    "defaultQueue": "normal",
    "inputs": [
        {
            "id": "workingDirectory",
            "value": {
                "validator": "",
                "visible": true,
                "required": false,
                "order": 0,
                "enquote": false,
                "default": ""
            },
            "details": {
                "label": "Input File or Directory",
                "description": "The file, or directory containing the files that you want to work on. This input will be copied to where your Matlab session runs. Click the 'Select Input' button to select the target file or directory.",
                "argument": null,
                "showArgument": false,
                "repeatArgument": false
            },
            "semantics": {
                "minCardinality": 1,
                "maxCardinality": 1,
                "ontology": [
                    "xsd:string"
                ],
                "fileTypes": [
                    "raw-0"
                ]
            }
        }
    ],
    "parameters": [
        {
            "id": "desktop_resolution",
            "value": {
                "visible": true,
                "required": true,
                "type": "enumeration",
                "order": 0,
                "enquote": false,
                "default": "1280x800",
                "enum_values": [
                    {
                        "800x600": "800x600"
                    },
                    {
                        "1280x800": "1280x800"
                    },
                    {
                        "1920x1080": "1920x1080"
                    },
                    {
                        "1920x1200": "1920x1200"
                    },
                    {
                        "1600x1200": "1600x1200"
                    },
                    {
                        "2560x1600": "2560x1600"
                    }
                ]
            },
            "details": {
                "label": "Desktop Resolution",
                "description": "Set the desktop screen size for your visualization session.",
                "argument": null,
                "showArgument": false,
                "repeatArgument": false
            },
            "semantics": {
                "minCardinality": 1,
                "maxCardinality": 1,
                "ontology": [
                    "xs:enumeration",
                    "xs:string"
                ]
            }
        },
        {
            "id": "_webhook_base_url",
            "value": {
                "visible": true,
                "required": true,
                "type": "string",
                "order": 1,
                "enquote": false,
                "default": null,
                "validator": null
            },
            "details": {
                "label": "Base portal webhook url.",
                "description": null,
                "argument": null,
                "showArgument": false,
                "repeatArgument": false
            },
            "semantics": {
                "minCardinality": 1,
                "maxCardinality": 1,
                "ontology": [
                    "xs:string"
                ]
            }
        },
        {
            "id": "_XTERM_CMD",
            "value": {
                "visible": true,
                "required": true,
                "type": "string",
                "order": 2,
                "enquote": false,
                "default": "swr -t 8 matlab",
                "validator": null
            },
            "details": {
                "label": "XTERM Program CMD",
                "description": null,
                "argument": null,
                "showArgument": false,
                "repeatArgument": false
            },
            "semantics": {
                "minCardinality": 1,
                "maxCardinality": 1,
                "ontology": [
                    "xs:string"
                ]
            }
        },
        {
            "id": "_MATLAB_VERSION",
