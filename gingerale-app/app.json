{
  "checkpointable": false,
  "name": "wallen-{{ app.name }}",
  "executionSystem": "tacc.stampede2.wallen",
  "executionType": "HPC",
  "deploymentPath": "apps/wallen-{{ app.name }}-{{ app.version }}",
  "deploymentSystem": "tacc.work.wallen",
  "helpURI": "http://brainmap.org/ale/cli.html",
  "label": "{{ app.label }}",
  "shortDescription": "{{ app.description }}",
  "longDescription": "GingerALE performs meta-analyses via the activation likelihood estimation (ALE) method. It also includes the transforms for icbm2tal conversions.",
  "modules": [
    "load tacc-singularity"
  ],
  "ontology": [],
  "parallelism": "SERIAL",
  "tags": [],
  "templatePath": "runner.sh",
  "testPath": "tester.sh",
  "version": "{{ app.version }}",
  "defaultMaxRunTime": "02:00:00",
  "inputs": [    {
    "id": "foci_text",
    "details": {
      "label": "the text file of foci data to use",
      "default": "agave://utrc-home.wallen/wallen/apps/gingerale-3.0.2/test/test_gingerale_talairach.txt",
      "required": true
    },
    "semantics": {}
  }],
  "parameters": [
    {
      "id": "p",
      "value": {
        "default": "0.01",
        "type": "string",
        "visible": true,
        "required": false
      },
      "details": {
        "label": "P value",
        "description": "Uncorrected P value threshold"
      }
    },
    {
      "id": "minVol",
      "value": {
        "default": "200",
        "type": "string",
        "visible": true,
        "required": false
      },
      "details": {
        "label": "minimum volume",
        "description": "Minimum allowed volume in mm^3"
      }
    },
    {
      "id": "CONTAINER_IMAGE",
      "value": {
        "default": "wallen/gingerale:3.0.2",
        "type": "string",
        "visible": false,
        "required": true,
        "order": 1000
      }
    }
  ],
  "outputs": []
}
