{
  "checkpointable": false,
  "name": "wallen-{{ app.name }}",
  "executionSystem": "tacc.lonestar6.wallen",
  "executionType": "HPC",
  "deploymentPath": "tapis/apps/wallen-{{ app.name }}-{{ app.version }}",
  "deploymentSystem": "cloud.corral.work.wallen",
  "helpURI": "https://fsl.fmrib.ox.ac.uk/fsl/fslwiki/MELODIC",
  "label": "{{ app.label }}",
  "shortDescription": "{{ app.description }}",
  "longDescription": "Given a Sleuth export in MNI or Tal format, split each study into an individual file, generate one Nifti image per activation map, scale images using fslmaths, and merge images into one final 4D Nifti image.",
  "modules": [
    "load tacc-singularity"
  ],
  "ontology": [],
  "parallelism": "SERIAL",
  "tags": [],
  "templatePath": "runner.sh",
  "testPath": "tester.sh",
  "version": "{{ app.version }}",
  "defaultMaxRunTime": "02:00:00",
  "defaultQueue": "development",
  "inputs": [    {
    "id": "foci_text",
    "details": {
      "label": "Input File",
      "description": "A text file of foci data in MNI or Talairach format"
    },
    "value": {
        "default": "",
        "required": true,
        "visible": true,
        "order": 1
      },
    "semantics": {}
  }],
  "parameters": [
    {
      "id": "coord_space",
      "value": {
        "default": "Tal_wb",
        "type": "enumeration",
        "enum_values": [
            { "Tal_wb": "Talairach" },
            { "MNI152_wb": "MNI" }
        ],
        "visible": true,
        "required": true,
        "order": 1
      },
      "details": {
        "label": "Coordinate Space",
        "description": "Specify the format of the input foci data"
      }
    },
    {
      "id": "mask_size",
      "value": {
        "default": ".nii.gz",
        "type": "enumeration",
        "enum_values": [
            { ".nii.gz": "More Conservative (Smaller)" },
            { "_dil.nii.gz": "Less Conservative (Dilated 2mm)" }
        ],
        "visible": true,
        "required": true,
        "order": 2
      },
      "details": {
        "label": "Mask Size",
        "description": "Specify more conservative (smaller) or less conservative (dilated by 2mm) masks"
      }
    },
    {
      "id": "normalize",
      "value": {
        "default": "true",
        "type": "enumeration",
        "enum_values": [
            { "true": "True" },
            { "false": "False" }
        ],
        "visible": true,
        "required": true,
        "order": 3
      },
      "details": {
        "label": "Normalize",
        "description": "Normalize all experiments to Subjects=4"
      }
    },
    {
      "id": "CONTAINER_IMAGE",
      "value": {
        "default": "{{ docker.namespace }}/{{ docker.repo }}:{{ docker.tag }}",
        "type": "string",
        "visible": false,
        "required": true,
        "order": 1000
      }
    }
  ],
  "outputs": []
}
