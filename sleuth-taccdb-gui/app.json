{
  "checkpointable": false,
  "name": "wallen-{{ app.name }}",
  "executionSystem": "tacc.lonestar6.wallen",
  "executionType": "HPC",
  "deploymentPath": "tapis/apps/wallen-{{ app.name }}-{{ app.version }}",
  "deploymentSystem": "cloud.corral.work.wallen",
  "helpURI": "https://brainmap.org/sleuth/",
  "label": "{{ app.label }}",
  "shortDescription": "{{ app.description }}",
  "longDescription": "Sleuth is the BrainMap application that is used to search for papers of interest, read their corresponding meta-data, and plot their results as coordinates on a standard glass brain in Talairach space. NOTE: After submitting the job, navigate to the History > Jobs tab, and when the job begins Running you will find an 'Open Session' button with connection information.",
  "modules": [
    "load tacc-singularity"
  ],
  "ontology": [],
  "parallelism": "SERIAL",
  "tags": ["DCV"],
  "templatePath": "runner.sh",
  "testPath": "tester.sh",
  "version": "{{ app.version }}",
  "defaultMaxRunTime": "02:00:00",
  "inputs": [],
  "parameters": [
    {
      "id": "CONTAINER_IMAGE",
      "value": {
        "default": "{{ docker.namespace }}/{{ docker.repo }}:{{ docker.tag }}",
        "type": "string",
        "visible": false,
        "required": true,
        "order": 1000
      }
    },
    {
      "id": "desktop_resolution",
      "value": {
          "visible": true,
          "required": true,
          "type": "enumeration",
          "order": 0,
          "enquote": false,
          "default": "1280x800",
          "enum_values": [
              {
                  "800x600": "800x600"
              },
              {
                  "1280x800": "1280x800"
              },
              {
                  "1920x1080": "1920x1080"
              },
              {
                  "1920x1200": "1920x1200"
              },
              {
                  "1600x1200": "1600x1200"
              },
              {
                  "2560x1600": "2560x1600"
              }
          ]
      },
      "details": {
          "label": "Desktop Resolution",
          "description": "Set the desktop screen size for your visualization session.",
          "argument": null,
          "showArgument": false,
          "repeatArgument": false
      },
      "semantics": {
          "minCardinality": 1,
          "maxCardinality": 1,
          "ontology": [
              "xs:enumeration",
              "xs:string"
          ]
      }
    },
    {
      "id": "_webhook_base_url",
      "semantics": {
          "minCardinality": 1,
          "ontology": [
              "xs:string"
          ],
          "maxCardinality": 1
      },
      "value": {
          "required": true,
          "enquote": false,
          "default": null,
          "visible": true,
          "validator": null,
          "type": "string",
          "order": 1
      },
      "details": {
          "argument": null,
          "repeatArgument": false,
          "description": null,
          "showArgument": false,
          "label": "Base portal webhook url."
      }
    },
    {
      "id": "_XTERM_CMD",
      "value": {
          "visible": true,
          "required": true,
          "type": "string",
          "order": 2,
          "enquote": false,
          "default": "java -cp /app/Sleuth.jar org.brainmap.Sleuth",
          "validator": null
      },
      "details": {
          "label": "XTERM Program CMD",
          "description": null,
          "argument": null,
          "showArgument": false,
          "repeatArgument": false
      },
      "semantics": {
          "minCardinality": 1,
          "maxCardinality": 1,
          "ontology": [
              "xs:string"
          ]
      }
    }
  ],
  "outputs": []
}
